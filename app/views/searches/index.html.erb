<div class='container'>
	Best <%= @searched %> in <%= @location %><br>
	<% @x.each do |b| %>
		<%= image_tag b.image_url %><br>
		<%= link_to b.name, b.url %><br>
		<%= image_tag b.rating_img_url %><%= pluralize(b.review_count, 'review') %><br>
		<% b.location.display_address.each_with_index do |a, index| %>
			<% if index == b.location.display_address.size - 1 %>
				<%= a %><br>
			<% else %>
				<%= a %>,
			<% end %>
		<% end %>
		<%= b.snippet_text%><br>
		<%= b.phone %><br>
	<% end %>
	<div id="map_wrapper">
    <div id="map_canvas" class="mapping"></div>
	</div>
<%= image_tag("yelp/yelp.png") %>
</div>