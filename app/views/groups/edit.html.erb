<div class="container">
  <div class="signup-box">
    <h1>Edit Your Group</h1>
    <br>
    <br>
    <%= form_for :group, url: groups_path, :html => {:class => 'form-horizontal'} do |f| %>

        <div class="form-group">
          <label for="inputEmail3" class="col-sm-3 control-label">Group Name</label>
          <div class="col-sm-9">
            <!--<input type="text" class="form-control" id="inputEmail3" placeholder="group name">-->
            <%= f.text_field :name ,class:"form-control" ,placeholder: "Name your group" %><br>
          </div>
        </div>

        <div class="form-group">
          <label for="inputEmail3" class="col-sm-3 control-label">Group Name</label>
          <div class="col-sm-9">
            <!--<input type="text" class="form-control" id="inputEmail3" placeholder="group name">-->
            <%= f.text_field :description ,class:"form-control" ,placeholder: "Group Description" %><br>
          </div>
        </div>

        <div class="form-group">
          <label class="col-sm-3 control-label">Edit Member Emails</label>
          <div class="col-sm-9">
            <!--<buttion class="btn btn-lg btn-info" data-toggle="modal" data-target="#myModal">Add member by email or username</buttion>-->
            <% #autocomplete_field :, autocomplete_user_email_groups_path ,
                #class:"form-control",
               #placeholder:"Separate member emails with a comma. Eg: a@a.com, b@b.com",
               #input_html: {'data-id-element' => '#group_user_email' }%>
            <%= text_field :user ,class:"form-control" ,placeholder: "Add member" %><br>
            <br>
            <div class="member-list-box">
              <% @users.each do |user| %>
                <%= user.name %>
                  <%= link_to "Delete","de", class:"btn btn-danger pull-right" , method: :delete %>

              <% end %>
            </div>
          </div>
        </div>

        <div class="form-group">
          <div class="col-sm-offset-3 col-sm-9">
            <button type="submit" class="btn btn-success">
              Edit Group
            </button>
          </div>
        </div>

  <% end %>
  </div>
</div>
